{
    "compilerOptions": {
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "sourceMap": true
    },
    "include": ["./src/**/*"],
    "ts-node": {
        "esm": true
    }
}
