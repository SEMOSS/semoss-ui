{
    "compilerOptions": {
        /* Lang and Env */
        "lib": ["es6", "dom", "ES2015"],
        "target": "es5",
        "jsx": "react-jsx",

        /* Modules */
        "baseUrl": "src",
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"],
            "@semoss/ui": ["libs/shared/ui/src/index.ts"]
        },

        /* Emit */
        "declaration": true,
        "declarationDir": ".",
        "emitDeclarationOnly": true,
        "outDir": "dist",

        /* Skip */
        "skipLibCheck": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.stories.tsx"]
}
