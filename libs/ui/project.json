{
    "name": "@semoss/ui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/ui/src",
    "projectType": "library",
    "tags": [],
    "// targets": "to see all targets run: nx show project libs --web",
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{projectRoot}/dist"],
            "cache": true,
            "inputs": ["production", "^production"],
            "options": {
                "cwd": "libs/ui",
                "main": "libs/ui/src/index.ts",
                "tsConfig": "libs/ui/tsconfig.json",
                "outputPath": "libs/ui/dist",
                "rollupConfig": "libs/ui/rollup.config.js",
                "format": ["esm", "cjs"]
            },
            "configurations": {}
        },
        "dev1": {
            "options": {
                "cwd": "libs/ui",
                "command": "rollup -w -c libs/ui/rollup.config.js storybook"
            },
            "cache": true,
            "dependsOn": ["^rollup:build"],
            "inputs": [
                "default",
                "^default",
                {
                    "externalDependencies": ["rollup"]
                }
            ],
            "outputs": ["{projectRoot}/dist"],
            "executor": "nx:run-commands",
            "configurations": {}
        },
        "storybook1": {
            "options": {
                "command": "storybook"
            },
            "cache": true,

            "inputs": ["default", "^default"],
            "executor": "nx:run-commands",
            "configurations": {}
        }
    }
}
