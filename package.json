        "@commitlint/config-conventional": "^17.6.6",
        "cross-env": "^7.0.3",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "@changesets/cli": "^2.26.2"
    }
